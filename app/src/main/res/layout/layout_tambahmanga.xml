<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:elevation="5dp"
    app:cardBackgroundColor="#D9FBFBFB"
    app:cardCornerRadius="@dimen/loginCardRadius">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/linearParent"
            android:layout_gravity="center"
            android:padding="@dimen/loginViewsMargin">

            <TextView
                style="@style/headerTextPrimary"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Tambah Informasi Manga"
                android:textSize="20dp"
                android:textAlignment="textStart"
                android:textColor="#d13636"
                />

            <TextView
                android:id="@+id/textViewJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="30dp"
                android:text="Judul Manga"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:typeface="serif" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textInputJudul"
                style="@style/parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/editTextJudul"
                    style="@style/modifiedEditText"
                    android:background="@drawable/edit_text_box"
                    android:focusable="true"
                    android:inputType="text"
                    android:maxLines="1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewSinopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="15dp"
                android:text="Sinopsis"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:typeface="serif" />

            <androidx.cardview.widget.CardView
                android:id="@+id/textInputSinopsis"
                style="@style/parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/editTextSinopsis"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/edit_text_box"
                    android:focusable="true"
                    android:inputType="text"
                    android:maxLines="1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewUlasan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="10dp"
                android:text="Ulasan"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/textInputUlasan"
                style="@style/parent"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/editTextUlasan"
                    style="@style/modifiedEditText"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/edit_text_box" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewJenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Jenis Manga"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:typeface="serif" />

            <RadioGroup
                android:id="@+id/rbgroupJenis"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_shounen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:buttonTint="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Shoujo"
                    android:textColor="#d13636" />

                <RadioButton
                    android:id="@+id/rb_shoujo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:buttonTint="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Shounen"
                    android:textColor="#d13636" />

                <RadioButton
                    android:id="@+id/rb_seinen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/black"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Seinen"
                    android:textColor="#d13636" />
            </RadioGroup>

            <TextView
                android:id="@+id/textViewGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Genre Manga"
                android:textColor="@color/black"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/Genresatu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_Action"
                        android:layout_width="99dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="5dp"
                        android:buttonTint="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Action"
                        android:textColor="#d13636" />

                    <CheckBox
                        android:id="@+id/cb_Comedy"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Comedy"
                        android:textColor="#d13636" />

                    <CheckBox
                        android:id="@+id/cb_SliceofLife"
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Slice Of Life"
                        android:textColor="#d13636" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Genredua"
                    android:layout_width="131dp"
                    android:layout_height="99dp"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_Romance"
                        android:layout_width="114dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Fantasy"
                        android:textColor="#d13636" />

                    <CheckBox
                        android:id="@+id/cb_Adventure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Adventure"
                        android:textColor="#d13636" />

                    <CheckBox
                        android:id="@+id/cb_Fantasy"
                        android:layout_width="123dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Romance"
                        android:textColor="#d13636" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Rating"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:typeface="serif" />

            <SeekBar
                android:id="@+id/seekBarRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:maxHeight="3dp"
                android:minHeight="3dp"
                android:backgroundTint="#d13636"
                android:progress="0"
                android:progressDrawable="@drawable/seek_bar_ruler"
                android:thumb="@drawable/seek_bar_slider"
                android:max="100" />

            <TextView
                android:id="@+id/textViewNilaiRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Score : 0"
                android:textSize="17dp"
                android:textColor="#d13636"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_simpan"
                    style="@style/loginButton"
                    android:layout_width="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="90dp"
                    android:text="Tambah"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>